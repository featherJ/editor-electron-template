<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
  <dict>
    <!-- JIT和未签名执行内存的允许 -->
    <!-- Allow JIT (Just-In-Time) compilation and unsigned executable memory. -->
    <!-- https://github.com/electron/electron-notarize#prerequisites -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>

    <!-- 禁用库验证 -->
    <!-- Disable library validation. -->
    <!-- https://github.com/electron-userland/electron-builder/issues/3940 -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>

    <!-- 允许访问摄像头，测试多语言权限提示所用。 -->
    <!-- Allow camera access, used for testing multilingual permission prompts. -->
    <key>com.apple.security.device.camera</key>
    <true/>
    
    <!-- 允许访问麦克风，测试多语言权限提示所用。 -->
    <!-- Allow microphone access, used for testing multilingual permission prompts. -->
    <key>com.apple.security.device.audio-input</key>
    <true/>
  </dict>
</plist>
