{
  "include": [
    "./src/**/*",
    "./libs/**/*"
  ],
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "target": "esnext",
    "module": "esnext",
    "sourceMap": true,
    "outDir": "./out",
    "allowJs": true,
    "baseUrl": "./src",
    "skipLibCheck": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": [
      "es5",
      "dom",
      "es2015.promise"
    ],
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}