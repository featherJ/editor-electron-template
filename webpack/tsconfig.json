{
  "include": [
    "./**/*",
  ],
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "target": "es6",
    "module": "CommonJS",
    "sourceMap": true,
    "allowJs": true,
    "baseUrl": "./",
    "skipLibCheck": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": [
      "es5",
      "dom",
      "es2015.promise"
    ],
  }
}